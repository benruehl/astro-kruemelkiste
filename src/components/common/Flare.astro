---
interface Props {
	color: "orange" | "yellow" | "blue";
	width: string;
	height: string;
	top?: string;
	right?: string;
	bottom?: string;
	left?: string;
}

const { color, width, height, top, right, bottom, left } = Astro.props;
---

<div class:list={["flair", color]}></div>

<style define:vars={{ width, height, top, right, bottom, left }}>
	.flair {
		position: absolute;
		z-index: -1;
		width: var(--width);
		height: var(--height);
		top: var(--top);
		right: var(--right);
		bottom: var(--bottom);
		left: var(--left);
	}
	.orange {
		background: radial-gradient(
			rgba(var(--flare-orange),0.4),
			rgba(var(--flare-orange),0) 50%
		);
	}
	.yellow {
		background: radial-gradient(
			rgba(var(--flare-yellow),0.4),
			rgba(var(--flare-yellow),0) 50%
		);
	}
	.blue {
		background: radial-gradient(
			rgba(var(--flare-blue),0.4),
			rgba(var(--flare-blue),0) 50%
		);
	}
</style>
