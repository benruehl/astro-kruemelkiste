import { Image } from 'astro:assets';
import groupImage from "../../icons/steffi-group.svg";
---

<footer>
    <Image src={groupImage} alt="Steffi und Kinder spazieren fröhlich"/>
    <div class="text">
        <h2>Kontakt</h2>
        <p>
            Steffi Rühl<br>
            Gounodstraße 101<br>
            13088 Berlin<br>
