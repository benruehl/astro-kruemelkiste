<style>
    footer {
        display: flex;
        justify-content: space-around;
        gap: 30px;
        padding: 100px 0;
        position: relative;

        &:before {
            content:"";
            background: var(--footer-background);
            position: absolute;
            top: -1px;
            bottom: 0;
            width: 100vw;
            z-index: -1;
        }
    }

    img {
        height: 500px;
        width: 430px;
    }

    h2 {
        font-size: 1.5rem;
        font-weight: 600;
        color: rgb(var(--text-color));
        margin-top: 4rem;
    }
</style>