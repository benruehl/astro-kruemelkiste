---
import '@fontsource/dosis';
import '@fontsource/varela-round';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Liebevolle Kindertagespflege in WeiÃŸensee" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
		<script is:inline>
			AOS.init();
		</script>
	</body>
</html>

<style lang="scss" is:global>
	:root {
		--text-color: 106, 126, 133;
		--text-color-strong: 38, 70, 83;
		--accent-color: 193, 102, 107;
		--accent-color-alt: 42, 157, 143;
		--card-background: 240, 229, 216;
		--card-background-dark: 228, 208, 185;
		--card-background-alt: 253, 237, 206;
		--card-background-accent: 254, 223, 205;
		--card-background-accent-alt: 245, 235, 214;
		--flare-orange: 244, 162, 97;
		--flare-yellow: 233, 196, 106;
		--flare-blue: 42, 157, 143;
		--orange: 244, 162, 97;
		--orange-strong: 231, 111, 81;
		--footer-background: #F7EFE7;
		--content-max-width: 1280px;
	}
	html {
		font-family: "Varela Round", sans-serif;
		color: rgb(var(--text-color));

		&::after {
			content: "";
			position: fixed;
			inset: 0;
			background-image: radial-gradient(
				at bottom, transparent 50%, rgba(252,188,152,0.2)
			);
			pointer-events: none;
		}
	}
	html,
	body {
		max-width: 100%;
		overflow-x: hidden;
	}
	body {
		margin: 0;
	}
	h1 {
		font-family: "Dosis", Tahoma, sans-serif;
		font-size: 6rem;
		font-weight: 400;
		line-height: 1;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		margin-bottom: 1em;
	}
	h2 {
		font-family: "Dosis", Tahoma, sans-serif;
		font-size: 4rem;
		font-weight: 400;
		line-height: 1;
        text-transform: uppercase;
	}
	h3 {
		font-family: "Dosis", Tahoma, sans-serif;
		font-size: 2.5rem;
		font-weight: 400;
		line-height: 1;
	}
	h2,
	h3 {
		.small {
			font-size: .4em;
			display: block;
			text-transform: none;
		}
	}
	p {
		font-family: "Varela Round", sans-serif;
	}
	a {
		color: rgb(var(--accent-color-alt));
		text-decoration: none;
		
		&:hover {
			text-decoration: underline;
		}

		&[href^="http"]::after,
		&[href^="https://"]::after
		{
			content: "";
			background-color: rgb(var(--accent-color-alt));
			mask-image: url("data:image/svg+xml,\
				<svg xmlns='http://www.w3.org/2000/svg'\
					stroke='currentColor' fill='none'\
					stroke-width='10' stroke-dashoffset='0'\
					stroke-dasharray='0' stroke-linecap='round'\
					stroke-linejoin='round' viewBox='0 0 100 100'>\
					<polyline fill='none' points='40 20 20 20 20 90 80 90 80 60'/>\
					<polyline fill='none' points='60 10 90 10 90 40'/>\
					<line fill='none' x1='89' y1='11' x2='50' y2='50' />\
				</svg>"
			);
			width: .8em;
			height: .8em;
			margin-left: .3em;
			display: inline-block;
		}
	}
	blockquote,
	figcaption {
		font-family: "Dosis", Tahoma, sans-serif;
	}
	main,
	footer {
		margin: auto;
		width: var(--content-max-width);
		max-width: calc(100% - 2rem);
	}
	main {
		font-size: 18px;
		line-height: 1.4;
		display: flex;
		flex-direction: column;
		gap: 18rem;
		margin-top: 10rem;
	}
	button {
        font-family: Dosis, "sans-serif";
        font-size: 1.2rem;
        font-weight: 600;
        border: none;
        padding: .6em 2em;
        border-radius: 2em;
        cursor: pointer;
	}
</style>
