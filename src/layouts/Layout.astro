---
import '@fontsource/dosis';
import '@fontsource/varela-round';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Liebevolle Kindertagespflege in WeiÃŸensee" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style lang="scss" is:global>
	:root {
		--text-color: 106, 126, 133;
		--text-color-strong: 38, 70, 83;
		--accent-color: 193, 102, 107;
		--accent-color-alt: 42, 157, 143;
		--card-background: 240, 229, 216;
		--card-background-alt: 253, 237, 206;
		--card-background-accent: 254, 223, 205;
		--card-background-accent-alt: 245, 235, 214;
		--flare-orange: 244, 162, 97;
		--flare-yellow: 233, 196, 106;
		--flare-blue: 42, 157, 143;
		--orange: 244, 162, 97;
		--orange-strong: 231, 111, 81;
		--footer-background: #F7EFE7;
		--content-max-width: 1280px;
	}
	html {
		font-family: "Varela Round", sans-serif;
		color: rgb(var(--text-color));
		background: linear-gradient(
			180deg, 
			rgba(252,188,152,0.25),
			transparent
		);
		background-attachment: fixed;
		overflow-x: hidden;
		position: relative;
	}
	h1 {
		font-family: "Dosis", sans-serif;
		font-size: 6.5rem;
		font-weight: 400;
		line-height: 1;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		margin-bottom: 1em;
	}
	h2 {
		font-family: "Dosis", sans-serif;
		font-size: 4rem;
		font-weight: 400;
		line-height: 1;
        text-transform: uppercase;
	}
	h3 {
		font-family: "Dosis", sans-serif;
		font-size: 2.5rem;
		font-weight: 400;
		line-height: 1;
	}
	h2,
	h3 {
		.small {
			font-size: .4em;
			display: block;
			text-transform: none;
		}
	}
	p {
		font-family: "Varela Round", sans-serif;
	}
	a {
		color: rgb(var(--accent-color-alt));
		text-decoration: none;
		
		&:hover {
			text-decoration: underline;
		}
	}
	blockquote,
	figcaption {
		font-family: "Dosis", sans-serif;
	}
	main,
	footer {
		margin: auto;
		width: var(--content-max-width);
		max-width: calc(100% - 2rem);
	}
	main {
		font-size: 18px;
		line-height: 1.4;
		display: flex;
		flex-direction: column;
		gap: 10rem;
	}
	section {
		margin-top: 10rem;
	}
</style>
